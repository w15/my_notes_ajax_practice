<div class="page-header">
  <h1>Notes</h1>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <ul class="list-group">
      <li class="list-group-item">
        <%= form_for Note.new do |f| %>
        <div class="input-group">
          <%= f.text_field :content, :placeholder => "Add a new note", :class => "form-control" %>
          <span class="input-group-btn">
            <%= f.submit :class => "btn btn-default" %>
          </span>
        </div>

        <% end %>
      </li>
      <% @notes.each do |note| %>
      <li class="list-group-item">
        <%= link_to 'Show', note, :class => "btn btn-default btn-sm" %>
        <%= link_to 'Edit', edit_note_path(note), :class => "btn btn-default btn-sm" %>
        <%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-sm" %>
        <%= note.content %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
